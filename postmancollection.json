{
  "info": {
    "name": "SmartSaving API",
    "_postman_id": "smart-saving-api-collection",
    "description": "Postman collection for SmartSaving API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"1234567890\",\n  \"role\": \"user\",\n  \"referredBy\": \"\",\n  \"shopName\": \"\",\n  \"category\": \"\",\n  \"address\": \"\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/send-otp",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/verify-otp",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/profile",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"dob\": \"1990-01-01\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/profile",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initiate Online Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"A\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/payments/online/initiate",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "payments", "online", "initiate"]
            }
          }
        },
        {
          "name": "Verify Online Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"order_id\",\n  \"razorpay_payment_id\": \"pay_id\",\n  \"razorpay_signature\": \"signature\",\n  \"paymentId\": \"mongo_payment_id\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/payments/online/verify",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "payments", "online", "verify"]
            }
          }
        },
        {
          "name": "Request Cash Activation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"A\"\n}"  
            },
            "url": {
              "raw": "{{BASE_URL}}/api/payments/cash/request",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "payments", "cash", "request"]
            }
          }
        },
        {
          "name": "Approve Cash Activation (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{ADMIN_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/payments/cash/approve/:userId?paymentId=:paymentId",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "payments", "cash", "approve", ":userId"],
              "query": [{ "key": "paymentId", "value": "mongo_id" }]
            }
          }
        }
      ]
    },
    {
      "name": "Referrals",
      "item": [
        {
          "name": "Get My Referrals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/referrals",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "referrals"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/",
          "host": ["{{BASE_URL}}"],
          "path": [""]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:1116",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "type": "string"
    }
  ]
}